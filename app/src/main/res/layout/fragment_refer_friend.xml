<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ReferFriendFragment">


        <ImageView
            android:id="@+id/imgReferFriend"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:src="@drawable/refer_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="42dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="280dp"
            android:fontFamily="@font/abeezee"
            android:text="Referral Code : "
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgReferFriend" />

        <TextView
            android:id="@+id/txtReferralCode"
            android:layout_width="326dp"
            android:layout_height="48dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="43dp"
            android:background="@drawable/rectangle"
            android:padding="12dp"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <Button
            android:id="@+id/btnShareCode"
            android:layout_width="131dp"
            android:layout_height="46dp"
            android:layout_marginTop="2dp"
            android:text="@string/share"
            android:textAllCaps="false"
            app:backgroundTint="@color/btnColor"
            app:icon="@drawable/ic_baseline_share_24"
            app:layout_constraintEnd_toEndOf="@+id/txtReferralCode"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/txtReferralCode"
            app:layout_constraintTop_toBottomOf="@+id/txtReferralCode" />

        <ImageView
            android:id="@+id/imgQrCode"
            android:layout_width="232dp"
            android:layout_height="208dp"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="90dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/qr_code"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnShareCode" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>