<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="my.edu.tarc.rewardreferralapp">
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-feature android:name="=android.hardware.camera" android:required="false" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RewardReferralApp">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCr8RYJfNSb1ebNAN1Zrjd0NzNy6Aa6KNg" />
        <activity android:name=".LoginActivity"/>
        <activity android:name=".ClaimListingActivity" />
        <activity android:name=".ApplyClaimSuccessActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="my.edu.tarc.rewardreferralapp.ReferralInsuranceListingActivity" />
        </activity>
        <activity android:name=".ApplyClaimActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="my.edu.tarc.rewardreferralapp.ReferralInsuranceListingActivity" />
        </activity>
        <activity android:name=".ReferralInsuranceListingActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="my.edu.tarc.rewardreferralapp.MainActivity" />
        </activity>
        <activity android:name=".GetStarted">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HomepageActivity" />
        <activity android:name=".StaffDashboard" />
        <activity android:name=".MainActivity" />

        <activity
            android:name="com.journeyapps.barcodescanner.CaptureActivity"
            android:screenOrientation="fullSensor"
            tools:replace="screenOrientation" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>